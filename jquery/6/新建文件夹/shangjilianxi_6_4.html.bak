	});
	$("#all #serachContent").blur(function(){
		$(this).val("请输入需查询问题的关键词");
	});
    $("#help dl dt").mouseover(function(){
		$(this).nextAll("dd").css("display","block");
		$(this).parent().siblings().find("dd").css("display","none");
	});
	$("#solve #solveNO").mouseover(function(){
		$("#solve form p,select").css("display","block");
	});
	$("#solve #solveOK").mouseover(function(){
		$("#solve form p,select").css("display","none");
	});
	
});
